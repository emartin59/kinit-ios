# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#

update_fastlane

default_platform(:ios)

platform :ios do

  before_all do
    ensure_git_status_clean
  end

  desc "Submits a new build to TestFairy"
  lane :test_fairy do
    update_project_team(teamid: "Z37J743B3H")
    build_ios_app(scheme: "KinWallet-Beta", export_method: 'enterprise')
    notification(subtitle: "Kinit Beta",
                 message: "Finished building v#{get_version_number}; starting upload")
    testfairy(api_key: ENV['testfairy_api_key'],
              auto_update: 'false',
              notify: 'false')
    notification(subtitle: "Kinit Beta", message: "v#{get_version_number} uploaded to testfairy")
    slack(message: "Kinit v#{get_version_number} uploaded to TestFairy",
          success: true)
  end

  desc "Submits a new build to TestFlight"
  lane :test_flight do
    release_build
    upload_to_testflight(skip_submission: true)
  end

  desc "Submits a new build to the App Store"
  lane :app_store do
    release_build
  end

  desc "Builds a release build under the Kin Ecosystem account"
  lane :release_build do
    update_project_team(teamid: "F879J8YSJ9")
    disable_automatic_code_signing
    sync_code_signing
    get_certificates
    build_ios_app(scheme: "KinWallet-Prod")
    enable_automatic_code_signing
    notification(subtitle: "Kinit", message: "Finished building v#{get_version_number}")
  end

  error do |lane, exception, options|
    notification(subtitle: "Error in lane #{lane}", message: exception.to_s)
  end
end

# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#

default_platform(:ios)

platform :ios do

  before_all do
    ensure_git_status_clean
    increment_build_number(build_number: number_of_commits)
  end

  desc "Submits a new build to TestFlight"
  lane :test_flight do
    release_build
    upload_ipa_to_testflight
    slack(
      message: "Kinit v#{get_version_number} (build #{get_build_number}) uploaded to TestFlight",
      success: true
    )
  end

  desc "Submits a new build to the App Store"
  lane :app_store do
    release_build
    upload_to_app_store
    slack(
      message: "Kinit v#{get_version_number} (build #{get_build_number}) uploaded to the AppStore",
      success: true
    )
  end

  desc "Builds a release build"
  lane :release_build do |options|
    adhoc = options[:stage] ? true : false
    build_scheme = options[:stage] ? "Kinit-ReleaseStage" : "Kinit"

    disable_automatic_code_signing
    sync_code_signing(
      git_branch: "kin-ecosystem-F879J8YSJ9",
      username: "fastlane@kinecosystem.com",
      force_for_new_devices: true,
      type: adhoc ? "adhoc" : "appstore"
    )
    build_ios_app(
      scheme: build_scheme,
      export_method: adhoc ? "ad-hoc" : "app-store"
    )
    notification(
      subtitle: build_scheme,
      message: "Finished building v#{get_version_number} (build #{get_build_number})"
    )
  end

  desc "Uploads the current (or the latest built) ipa to testflight"
  lane :upload_ipa_to_testflight do
    upload_to_testflight(
      username: "fastlane@kinecosystem.com",
      skip_waiting_for_build_processing: true,
      skip_submission: true
    )
  end

  desc "Builds a release version and distributes (AdHoc) via Beta by Fabric"
  lane :fabric_beta do
    release_build(stage: true)
    crashlytics(crashlytics_path: "KinWallet/Crashlytics.framework/")
  end

  after_all do
    git_commit(
      path: ["./KinWallet.xcodeproj/project.pbxproj", "./KinWallet/Info.plist"],
      message: "Build number bump"
    )
    enable_automatic_code_signing
  end

  error do |lane, exception, options|
    enable_automatic_code_signing
    notification(
      subtitle: "Error in lane #{lane}",
      message: exception.to_s
    )
  end
end
